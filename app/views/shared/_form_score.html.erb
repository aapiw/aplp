<div class="form-group form-float">
    <div class="form-line">
        <%= f.number_field :plot, class:"form-control" , min:"0", max:"20", required:true  %>
        <label class="form-label">Struktur/Alur <span class="col-pink">(max 20)</span></label>
    </div>
</div>
<div class="form-group form-float">
    <div class="form-line">
        <%= f.number_field :content, class:"form-control" , min:"0", max:"20", required:true  %>
        <label class="form-label">Isi <span class="col-pink">(max 20)</span></label>
    </div>
</div>

<div class="form-group form-float">
    <div class="form-line">
        <%= f.number_field :fluency, class:"form-control", min:"0", max:"15", required:true  %>
        <label class="form-label">Kelancaran <span class="col-pink">(max 15)</span></label>
    </div>
</div>

<div class="form-group form-float">
    <div class="form-line">
        <%= f.number_field :gesture, class:"form-control", min:"0", max:"10", required:true  %>
        <label class="form-label">Gestur <span class="col-pink">(max 10)</span></label>
    </div>
</div>
<div class="form-group form-float">
    <div class="form-line">
        <%= f.number_field :sound, class:"form-control", min:"0", max:"5", required:true  %>
        <label class="form-label">Volume suara <span class="col-pink">(max 5)</span></label>
    </div>
</div>
<div class="form-group form-float">
    <div class="form-line">
        <%= f.number_field :duration, class:"form-control", min:"0", max:"5", required:true  %>
        <label class="form-label">waktu/durasi <span class="col-pink">(max 5)</span></label>
    </div>
</div>
<div class="form-group form-float">
        <label class="form-label"> <span class="col-pink">(*harus diisi)</span></label>
    <div class="form-line">
        <%= f.text_area :note, class:"form-control", placeholder:"Catatan", required:true  %>
    </div>
</div>