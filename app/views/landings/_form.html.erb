<div class="row clearfix">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="card">
      <div class="header">
        <h2>
            HALAMAN AWAL
        </h2>
      </div>
      <div class="body">
        <%= form_for(@landing) do |f| %>
          <div class="form-group form-float">
            <div class="form-line">
              <%= f.text_area :title, class:"form-control no-resize" %>
            </div>
          </div>
            <p><small> &lt;br&gt; : Untuk baris baru/Enter<small></p>
          <%= f.submit "SIMPAN", class:"btn btn-primary waves-effect" %>
        <% end %>
      </div>
    </div>
  </div>
</div>