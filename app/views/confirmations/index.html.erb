<p id="notice"><%= notice %></p>

<h1>Confirmations</h1>

<table>
  <thead>
    <tr>
      <th>Flight arrival number</th>
      <th>Flight arrival date</th>
      <th>Flight arrival hours</th>
      <th>Flight return number</th>
      <th>Date of return flight</th>
      <th>Return flight hours</th>
      <th>Hijab</th>
      <th>Dress size</th>
      <th>Script</th>
      <th>Arrival ticket</th>
      <th>Return ticket</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmations.each do |confirmation| %>
      <tr>
        <td><%= confirmation.flight_arrival_number %></td>
        <td><%= confirmation.flight_arrival_date %></td>
        <td><%= confirmation.flight_arrival_hours %></td>
        <td><%= confirmation.flight_return_number %></td>
        <td><%= confirmation.date_of_return_flight %></td>
        <td><%= confirmation.return_flight_hours %></td>
        <td><%= confirmation.hijab %></td>
        <td><%= confirmation.dress_size %></td>
        <td><%= confirmation.script %></td>
        <td><%= confirmation.arrival_ticket %></td>
        <td><%= confirmation.return_ticket %></td>
        <td><%= confirmation.user %></td>
        <td><%= link_to 'Show', confirmation %></td>
        <td><%= link_to 'Edit', edit_confirmation_path(confirmation) %></td>
        <td><%= link_to 'Destroy', confirmation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Confirmation', new_confirmation_path %>
