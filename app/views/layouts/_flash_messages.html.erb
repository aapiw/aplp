<% if action_name ==  'index' and controller_name == 'landings'
		klass  = 'container' 
	else
		klass = 'container-flash'
	end 
%>

<%if flash.present? %>
<!-- <div class=" "> -->
		<% flash.each do |key, value| %>
		<% color = {alert:"red", notice:"green" } %>
			<div class="<%=klass%> alert bg-<%=color[key.to_sym] %>">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
			  <ul>
			  <% if value.respond_to? :each %>
				  <% value.each do |message| %>
				  	<li><%= message %></li>
				  <% end %>
				  <%else%>
				  	<li><%= value %></li>
				 <% end %>
			  </ul>
			</div>
		<% end %>
<!-- </div> -->
<% end %>