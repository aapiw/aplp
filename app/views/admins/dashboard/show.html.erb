<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>DETAIL PENDAFTAR</h2>
        </div>
        <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <%= @user.name.titlecase %> | <%= @user.id_reg %>
                            </h2>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped dashboard-task-infos">
                                    <tbody>
                                    <tr>
                                      <td>Status</td>
                                      <td><%= @user.status %></td>
                                    </tr>
                                    <tr>
                                      <td>Status Akun</td>
                                      <td><%= @user.status_akun%></td>
                                    </tr>
                                    <tr>
                                      <td>No Registrasi</td>
                                      <td><%= @user.id_reg %></td>
                                    </tr>
                                    <tr>
                                      <td>Jenis Kelamin</td>
                                      <td><%= @user.gender_print %></td>
                                    </tr>
                                    <tr>
                                      <td>Nama</td>
                                      <td><%= @user.name.titlecase %></td>
                                    </tr>
                                    <tr>
                                      <td>Email</td>
                                      <td><%= @user.email %></td>
                                    </tr>
                                    <tr>
                                      <td>Tanggal lahir</td>
                                      <td><%= @user.dob %></td>
                                    </tr>
                                    <tr>
                                      <td>Usia</td>
                                      <td><%= @user.counting_age %></td>
                                    </tr>
                                    <tr>
                                      <td>No Passport</td>
                                      <td><%= @user.passport %></td>
                                    </tr>
                                    <tr>
                                      <td>Tanggal  Expire Passport</td>
                                      <td><%= @user.passport_expire %></td>
                                    </tr>
                                    <tr>
                                      <td>Negara Asal</td>
                                      <td><%= @user.country.name.titlecase %></td>
                                    </tr>
                                    <tr>
                                      <td>KBRI/KJRI Tempat Perlomba</td>
                                      <td><%= @user.admin.name.titlecase %></td>
                                    </tr>
                                    <% if @user.to_indonesias.present?  %>
                                      <% @user.to_indonesias.each do |dest| %>
                                        <tr class="bold">
                                          <td>Tujuan ke Indonesia</td>
                                          <td><%= dest.destination.titlecase %>, <%= dest.long %> <%= dest.unit.titlecase %></td>
                                        </tr>
                                      <% end %>
                                      <% else %>
                                      <tr>
                                        <td>Pernah ke Indonesia</td>
                                        <td>Belum</td>
                                      </tr>
                                    <% end %>
                                    <tr>
                                      <td>ID Skype</td>
                                      <td><%= @user.skype_id rescue ""  %></td>
                                    </tr>
                                    <tr>
                                      <td>Jenis Lomba</td>
                                      <td><%= @user.contest ? @user.contest : "Kosong"  %></td>
                                    </tr>
                                    <% if @user.bipa_courses.present?  %>
                                      <% @user.bipa_courses.each do |course| %>
                                        <tr class="bold">
                                          <td>Kursus BIPA</td>
                                          <td><%= course.location.titlecase %>, <%= course.long %> <%= course.unit.titlecase %></td>
                                        </tr>
                                      <% end %>
                                    <% else %>
                                      <tr>
                                        <td>Pernah Kursus BIPA</td>
                                        <td>Belum</td>
                                      </tr>
                                    <% end %>
                                  </tbody>
                                </table>
                              <div class="pull-left">
                                <% if @user.confirmed? %>
                                  <a href="#x" class="disabled btn bg-blue waves-effect">Aktivasi</a>
                                <% else %>
                                  <a href="<%= confirm_admins_dashboard_path(@user) %>" class="btn bg-blue waves-effect">Aktivasi</a>
                                <% end %>
                                <% if @user.lock %>
                                  <%= link_to "Buka Kunci", lock_admins_dashboard_path(@user, lock:false ), class:"btn bg-blue waves-effect" %>
                                  <!-- <a href="<%#= lock_admins_dashboard_path(@user) %>" class="btn bg-blue waves-effect">Buka Kunci</a> -->
                                <% else %>
                                  <%= link_to "Kunci", lock_admins_dashboard_path(@user, lock:true ), class:"btn bg-blue waves-effect" %>
                                  <!-- <a href="<%#= lock_admins_dashboard_path(@user) %>" class="btn bg-blue waves-effect">Kunci</a> -->
                                <% end %>
                                <%= link_to "Hapus", admins_dashboard_path(@user), class:"btn bg-blue waves-effect", data:{confirm:"Kamu Yakin ingin menghapusnya"}, method: :delete %>
                                <% if @user.win %>
                                  <%= link_to "Menang", "#x", class:"disabled btn bg-blue waves-effect" %>
                                  <%#= link_to "Kalah", win_admins_dashboard_path(@user, win:false), class:"btn bg-blue waves-effect" %>
                                <% else %>
                                  <%= link_to "Menang", win_admins_dashboard_path(@user, win:true), class:"btn bg-blue waves-effect" %>
                                <% end %>
                                
                              
                              </div>

                              <div class="pull-right">
                                <% if @user.passport_image.path %>
                                  <%= link_to "Download Passport", @user.passport_image.url, class: "btn bg-blue waves-effect", download: "Passport-#{@user.id_reg}" %>
                                <% else %>
                                  <%= link_to "Download Passport", '', class: "disabled btn bg-blue waves-effect", download: "Passport-#{@user.id_reg}" %>
                                <% end %>
                              
                                <% if @user.avatar.path %>
                                  <%= link_to "Download Foto", @user.avatar.url, class: "btn bg-blue waves-effect", download: "Foto-#{@user.id_reg}" %>
                                <% else %>
                                  <%= link_to "Download Foto", "", class: "disabled btn bg-blue waves-effect", download: "Foto-#{@user.id_reg}" %>
                                <% end %>
                                
                                
                                <% if @user.confirmation%>
                                  <%= link_to "Download Naskah", @user.confirmation.script.url, class: "btn bg-blue waves-effect", download: "Naskah-#{@user.id_reg}" %>
                                <% else %>
                                  <%= link_to "Download Naskah", "", class: "disabled btn bg-blue waves-effect", download: "Naskah-#{@user.id_reg}" %>
                                <% end %>
                              </div>
                              </div>


                        </div>
                    </div>
                </div>
                    <!-- #END# Exportable Table -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Pilih Lomba
                            </h2>
                        </div>
                        <div class="body">
                          <div class="form-group">
                              <input type="radio" name="contest" checked id="pidato" class="with-gap" required>
                              <label for="pidato">Pidato</label>

                              <input type="radio" name="contest" id="bercerita" class="with-gap" required>
                              <label for="bercerita" class="m-l-20">Bercerita</label>
                          </div>
                          <a href="#x" class="btn bg-blue waves-effect">Kirim</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Penilaian Pidato
                            </h2>
                        </div>

                        <div class="body">
                          <form id="form_validation" method="POST">
                              <div class="form-group form-float">
