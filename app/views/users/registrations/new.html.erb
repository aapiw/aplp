<div class="signup-box">
    <div class="logo">
        <a href="javascript:void(0);"><b>APLP 2017</b></a>
        <small>Selamat Datang di Aplikasi APLP</small>
    </div>
    <div class="card">
        <div class="body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ id:"sign_up"}) do |f| %>
            <%= devise_error_messages! %>
            <div class="msg">Pendaftaran akun baru</div>

            <div class="form-group form-float">
                <div class="form-line">
                    <%= f.text_field :name, class:"form-control", autofocus: true, required:true %>

                    <label class="form-label">Nama sesuai passport</label>
                </div>
            </div>

            <div class="form-group form-float">
                <div class="form-line">
                    <%= f.number_field :passport, min:"0", class:"form-control", required:true %>
                    <label class="form-label">No Passport</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <%= f.text_field :passport_expire, class:"form-control datepicker", placeholder:"Kadaluarsa Passport", required:true %>
                </div>
            </div>
            <div class="input-group">
                <div class="form-line">
                    <%= f.radio_button :gender, "lk", required:true, checked:true, id:"male", class: "with-gap" %>
                    <%= label :male, "Laki-Laki", for:"male" %>
                    <%= f.radio_button :gender, "pr", id:"female", required:true, class: "with-gap" %>
                    <%= label :female, "Perempuan", for:"female" %>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group form-float">
                    <div class="form-line">
                        <%= f.select(:country_id, Country.all.collect {|c| [ c.name, c.id ] }, {include_blank: 'Pilih Negara'}, class:"form-control form-control--z-5 show-tick", required:true) %>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group form-float">
                    <div class="form-line " id="consulates_lists">
                        <select name="user[admin_id]" class="form-control form-control--z-4 show-tick" disabled required>
                            <option value="">Pilih KBRI</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group form-float">
                <div class="form-line">
                    <%= f.email_field :email, class:"form-control", required:true %>
                    <label class="form-label">Email</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
                    <label class="form-label">Password</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <%= f.password_field :password_confirmation, class:"form-control", minlength:"6", required:true, autocomplete: "off" %>
                    <label class="form-label">Konfirmasi Password </label>
                </div>
            </div>
            <%= f.submit "SIGN UP", class:"btn btn-block btn-lg bg-pink waves-effect" %>
          <% end %>
          <div class="m-t-25 m-b--5 align-center">
            <%= render "users/shared/links" %>
          </div>
          
        </div>
    </div>
</div>